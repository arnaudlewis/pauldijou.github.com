---
%article.post
  %h2
    %a{:href=>page.post.url}
      = page.post.title
  .meta
    Posted by 
    %span.authors= ' '.concat(page.post.authors.map{|u| site.identities.method_missing(u).name} * ', ')
    on 
    %span.date= page.post.date.strftime( '%b %d, %Y' )
    - if site.disqus
      | 
      %span.fa.fa-comments.fa-fw
      = page.post.disqus_comments_link
    
  .content
    ~ page.post.content
    
  .footer
    %span.fa.fa-link.fa-fw
    %a{:href=>page.post.url} Permalink
    | 
    - if site.disqus
      %span.fa.fa-comments.fa-fw
      = page.post.disqus_comments_link
      | 
    - if page.post.tags
      %span.tags
        %span.fa.fa-tags.fa-fw
        Tags :
        - for tag in page.post.tags
          - unless tag.nil?
            %a.tag{:href=>tag.primary_page.url}= tag

  - if page.alone
    .pagination
      .row
        .col-xs-6
          - if page.post.previous_post
            %a.button.block.previous{:href=>page.post.previous_post.url} Previous
        .col-xs-6
          - if page.post.next_post
            %a.button.block.next{:href=>page.post.next_post.url} Next
            
    .comments
      = page.post.disqus_comments