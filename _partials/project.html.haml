.project.well
  - if page.alone
    %ul.pager.visible-desktop{:style=>"float:right;"}
      - if page.project.next_project
        %li
          %a{:href=>page.project.next_project.url} Previous
      - if page.project.previous_project
        %li
          %a{:href=>page.project.previous_project.url} Next

  %h2
    %a{:href=>page.project.url}
      = page.project.title
  %h5.date= page.project.project_date

  %blockquote
    %dl.dl-horizontal
      %dt
        %h6 Project type
      %dd #{page.project.project_type}

      %dt
        %h6 Url
      %dd 
        %a{:href=>"#{page.project.project_url}", :target=>"_blank"}
          = page.project.project_url.size > site.max_url_label_size ? page.project.project_url[0..site.max_url_label_size].concat("...") : page.project.project_url

      %dt
        %h6 Description
      %dd #{page.project.project_description}

      %dt
        %h6 Technologies
      %dd #{page.project.project_technologies.join(", ")}

  
  .content
    - if !page.alone
      %p
        %a.btn{:href=>page.project.url} Learn more...
    - if page.alone
      ~ page.project.content
