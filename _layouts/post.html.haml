---
layout: main
---
.row
  .span9
    .post
      %ul.pager.visible-desktop{:style=>"float:right;"}
        - if page.next_post
          %li
            %a{:href=>page.next_post.url} Previous
        - if page.previous_post
          %li
            %a{:href=>page.previous_post.url} Next
      
      %h2
        = page.title
      .meta
        Posted by 
        %span.label Paul Dijou 
        on 
        %span.label.label-important{:style=>"margin-right: 10px;"}= page.date.strftime( '%b %d, %Y' )
        - if site.disqus
          | 
          = page.disqus_comments_link
      .content
        ~ content
      
      .comments
        = page.disqus_comments
      
    .visible-desktop
      %ul.pager
        - if page.next_post
          %li.previous
            %a{:href=>page.next_post.url} Previous: #{page.next_post.title}
        - if page.previous_post
          %li.next
            %a{:href=>page.previous_post.url} Next: #{page.previous_post.title}
    
    .hidden-desktop
      %ul.pager
        - if page.next_post
          %li.previous
            %a{:href=>page.next_post.url} Previous
        - if page.previous_post
          %li.next
            %a{:href=>page.previous_post.url} Next
            
  .span3
    %aside
      = partial("social-share.html.haml")
      %ul.nav.nav-list.well
        %li.nav-header
          Tag Cloud
        %li
          = site.posts_tag_cloud
          