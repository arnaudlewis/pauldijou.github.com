---
layout: main
---
.row
  .span9
    = partial('post.html.haml', {'parent'=>page, 'post'=>page, 'alone' => true})
    
    .visible-desktop
      %ul.pager
        - if page.previous_post
          %li.previous
            %a{:href=>page.previous_post.url} Previous: #{page.previous_post.title}
        - if page.next_post
          %li.next
            %a{:href=>page.next_post.url} Next: #{page.next_post.title}
    
    .hidden-desktop
      %ul.pager
        - if page.previous_post
          %li.previous
            %a{:href=>page.previous_post.url} Previous
        - if page.next_post
          %li.next
            %a{:href=>page.next_post.url} Next

    %aside.visible-phone
      %ul.nav.nav-list.well
        %li.nav-header
          Tag Cloud
        %li
          = site.posts_tag_cloud
      %div
        &nbsp;
      = partial("social-share.html.haml")
            
    .comments
      = page.disqus_comments
      
  .span3
    %aside.hidden-phone
      %ul.nav.nav-list.well
        %li.nav-header
          Tag Cloud
        %li
          = site.posts_tag_cloud
      %div
        &nbsp;
      .follow-scroll
        = partial("social-share.html.haml")
  
= page.disqus_comments_count
      